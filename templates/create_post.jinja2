{# Form for creating a new post for Blogly. #}

{% extends "base.jinja2" %}


{% block title %}
    Create Post
{% endblock title %}

{% block content %}

    <h1>Create A New Post for {{ user.get_full_name() }}</h1>

    <form action="/users/{{ user.id }}/posts/new", method="POST">

        <label for="fname">Title</label>
        <input id="fname" type="text" name="firstname" placeholder="Enter a first name">

        <label for="lname">Content</label>
        <input id="lname" type="text" name="lastname" placeholder="Enter a last name">

        <button>Add</button>
    </form>

{% endblock content %}
