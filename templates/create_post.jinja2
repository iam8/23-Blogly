{# Form for creating a new post for Blogly. #}

{% extends "base.jinja2" %}


{% block title %}
    Create Post
{% endblock title %}

{% block content %}

    <h1>Create A New Post for {{ user.get_full_name() }}</h1>

    <form action="/users/{{ user.id }}/posts/new", method="POST">

        <label for="title">Title</label>
        <input id="title" type="text" name="title" placeholder="Enter a title for your post">

        <label for="content">Content</label>
        <input id="content" type="text" name="content" placeholder="Enter post content">

        <div>Add tags</div>
        {% for tag in tags %}
            <label for="tag{{ tag.id }}">{{ tag.name }}</label>
            <input id="tag{{ tag.id }}"
                   type="checkbox"
                   name="tag"
                   value="{{ tag.id }}">
        {% endfor %}

        <button>Add</button>
    </form>

    <form action="/users/{{ user.id }}" method="GET">
        <button>Cancel</button>
    </form>

{% endblock content %}
