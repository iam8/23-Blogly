{# Page containing details about a specific user, and options to delete or edit that user. #}

{% extends "base.jinja2" %}


{% block title %}
    User Details
{% endblock title %}

{% block content %}

    <h1>{{ user.get_full_name() }}</h1>
    <img src="{{ user.image_url }}" alt="{{ user.get_full_name() }}" class="img-fluid">

    <div>
        <b>Posts</b>
    </div>
    {% for post in posts %}
        <li>
            <a href="/posts/{{ post.id }}">{{ post.title }}</a>
        </li>
    {% endfor %}

    <form>
        <button class="btn btn-primary btn-sml"
                formaction="/users/{{ user.id }}/posts/new"
                formmethod="GET">
            Add new post
        </button>

        <button class="btn btn-primary btn-sml"
                formaction="/users/{{ user.id }}/edit"
                formmethod="GET">
            Edit user
        </button>

        <button class="btn btn-danger btn-sml"
                formaction="/users/{{ user.id }}/delete"
                formmethod="POST">
            Delete user
        </button>
    </form>

{% endblock content %}
