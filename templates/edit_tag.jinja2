{# Form for editing a tag for Blogly. #}

{% extends "base.jinja2" %}


{% block title %}
    Edit Tag
{% endblock title %}

{% block content %}

    <h1>Edit Tag</h1>

    <form>
        <div>
            <label for="tagname">Name</label>
            <input id="tagname" type="text" name="tagname" placeholder="Enter a name for the tag">
        </div>

        <button class="btn btn-success btn-sml"
                formaction="/tags/{{ tag.id }}/edit"
                formmethod="POST">
            Save
        </button>

        <button class="btn btn-secondary btn-sml"
                formaction="/tags/{{ tag.id }}"
                formmethod="GET">
            Cancel
        </button>
    </form>

{% endblock content %}
