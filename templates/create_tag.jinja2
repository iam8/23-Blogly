{# Form for creating a new tag for Blogly. #}

{% extends "base.jinja2" %}


{% block title %}
    Create Tag
{% endblock title %}

{% block content %}

    <h1>Create A New Tag</h1>

    <form method="POST" action="/tags/new">
        <div class="form-group row">
            <label for="tagname" class="col-sm-2 col-form-label">Name</label>
            <input id="tagname"
                   class="form-control"
                   type="text"
                   name="tagname"
                   placeholder="Enter a name for the tag">
        </div>

        {% for msg in get_flashed_messages() %}
            <div class="alert alert-info">{{ msg }}</div>
        {% endfor %}

        <div class="form-group text-right">
            <a href="/tags" class="btn btn-outline-info">Cancel</a>
            <button type="submit" class="btn btn-success">Add</button>
        </div>
    </form>

{% endblock content %}
