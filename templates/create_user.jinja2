{# Form for creating a new user for Blogly. #}

{% extends "base.jinja2" %}


{% block title %}
    Create User
{% endblock title %}

{% block content %}

    <h1>Create A New User</h1>

    <form method="POST" action="/users/new">
        <div class="form-group row">
            <label for="fname" class="col-sm-2 col-form-label">First Name</label>
            <input id="fname"
                   class="form-control"
                   type="text"
                   name="firstname"
                   placeholder="Enter a first name">
        </div>

        <div class="form-group row">
            <label for="lname" class="col-sm-2 col-form-label">Last Name</label>
            <input id="lname"
                   class="form-control"
                   type="text"
                   name="lastname"
                   placeholder="Enter a last name">
        </div>

        <div class="form-group row">
            <label for="img-url" class="col-sm-2 col-form-label">Image URL</label>
            <input id="img-url"
                   class="form-control"
                   type="text"
                   name="imageurl"
                   placeholder="Provide a link to an image for this user">
        </div>

        <div class="form-group row">
            <div class="ml-auto mr-3">
                <a href="/users" class="btn btn-outline-info">Cancel</a>
                <button type="submit" class="btn btn-success">Add</button>
            </div>
        </div>

    </form>

{% endblock content %}
