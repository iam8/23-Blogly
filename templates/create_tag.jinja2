{# Form for creating a new tag for Blogly. #}

{% extends "base.jinja2" %}


{% block title %}
    Create Tag
{% endblock title %}

{% block content %}

    <h1>Create A New Tag</h1>

    <form action="/tags/new", method="POST">

        <label for="tagname">Name</label>
        <input id="tagname" type="text" name="tagname" placeholder="Enter a name for the tag">

        <button>Add</button>
    </form>

{% endblock content %}
