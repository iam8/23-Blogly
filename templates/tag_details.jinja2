{# Page containing details about a specific tag, including a list of posts that have this tag, and
   options to delete or edit that post. #}

{% extends "base.jinja2" %}


{% block title %}
    Tag Details
{% endblock title %}

{% block content %}

    <h1>{{ tag.name }}</h1>

    {% for post in posts %}
        <li>
            <a href="/posts/{{ post.id }}">{{ post.title }}</a>
        </li>
    {% endfor %}

    <form action="/tags/{{ tag.id }}/edit" method="GET">
        <button>Edit</button>
    </form>

    <form action="/tags/{{ tag.id }}/delete" method="POST">
        <button>Delete</button>
    </form>

{% endblock content %}
