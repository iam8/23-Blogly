{# Form for creating a new post for Blogly. #}

{% extends "base.jinja2" %}

{% block title %}
    Create Post
{% endblock title %}

{% block content %}

    <h1>Create A New Post for {{ user.get_full_name() }}</h1>

    <form method="POST" action="/users/{{ user.id }}/posts/new">

        <div class="form-group row">
            <label for="title" class="col-sm-2 col-form-label">Title</label>
            <input id="title"
                   class="form-control"
                   type="text"
                   name="title"
                   placeholder="Enter a title for your post">
        </div>

        <div class="form-group row">
            <label for="content" class="col-sm-2 col-form-label">Content</label>
            <textarea id="content" class="form-control" name="content"></textarea>
        </div>

        <div>
            <b>Add tags</b>
        </div>
        <div class="form-check">
            {% for tag in tags %}
                <div>
                    <input id="tag{{ tag.id }}"
                           class="form-check-input"
                           type="checkbox"
                           name="tag"
                           value="{{ tag.id }}">
                    <label for="tag{{ tag.id }}" class="form-check-label">{{ tag.name }}</label>
                </div>
            {% endfor %}
        </div>

        {# <button class="btn btn-success btn-sml"
                formaction="/users/{{ user.id }}/posts/new"
                formmethod="POST">
            Add
        </button>

        <button class="btn btn-secondary btn-sml"
                formaction="/users/{{ user.id }}"
                formmethod="GET">
            Cancel
        </button> #}


        <div class="form-group row">
            <div class="ml-auto mr-3">
                <a href="/users/{{ user.id }}" class="btn btn-outline-info">Cancel</a>
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </div>
    </form>

{% endblock content %}
