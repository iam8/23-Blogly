{# Page containing details about a specific tag, including a list of posts that have this tag, and
   options to delete or edit that post. #}

{% extends "base.jinja2" %}


{% block title %}
    Tag Details
{% endblock title %}

{% block content %}

    <h1>{{ tag.name }}</h1>

    <div>
        <b>Posts with this tag</b>
    </div>
    {% for post in posts %}
        <li>
            <a href="/posts/{{ post.id }}">{{ post.title }}</a>
        </li>
    {% endfor %}

    <form>
        <button class="btn btn-primary btn-sml"
                formaction="/tags/{{ tag.id }}/edit"
                formmethod="GET">
            Edit tag
        </button>

        <button class="btn btn-danger btn-sml"
                formaction="/tags/{{ tag.id }}/delete"
                formmethod="POST">
            Delete tag
        </button>
    </form>

{% endblock content %}
