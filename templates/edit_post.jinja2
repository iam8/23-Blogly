{# Form for editing an existing post for Blogly. #}

{% extends "base.jinja2" %}


{% block title %}
    Edit Post
{% endblock title %}

{% block content %}

    <h1>Edit Post</h1>

    <form>

        <div>
            <label for="title">Title</label>
            <input id="title" type="text" name="title" placeholder="Enter a title for your post">
        </div>

        <div>
            <label for="content">Content</label>
            <input id="content" type="text" name="content" placeholder="Enter post content">
        </div>

        <div>
            <b>Add tags</b>
        </div>
        {% for tag in tags %}
            <div>
                <input id="tag{{ tag.id }}"
                    type="checkbox"
                    name="tag"
                    value="{{ tag.id }}">
                <label for="tag{{ tag.id }}">{{ tag.name }}</label>
            </div>
        {% endfor %}

        <button class="btn btn-success btn-sml"
                formaction="/posts/{{ post.id }}/edit"
                formmethod="POST">
            Save
        </button>

        <button class="btn btn-secondary btn-sml"
                formaction="/users/{{ user.id }}"
                formmethod="GET">
            Cancel
        </button>
    </form>

{% endblock content %}
