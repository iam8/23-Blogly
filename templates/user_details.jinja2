{# Page containing details about a specific user, and options to delete or edit that user. #}

{% extends "base.jinja2" %}


{% block title %}
    User Details
{% endblock title %}

{% block content %}

    <h1>{{ user.get_full_name() }}</h1>
    <img src="{{ user.image_url }}" alt="{{ user.get_full_name() }}" class="img-fluid">

    <h2>Posts</h2>
    {% for post in posts %}
        <li>
            <a href="/posts/{{ post.id }}">{{ post.title }}</a>
        </li>
    {% endfor %}

    <form action="/users/{{ user.id }}/posts/new" method="GET">
        <button class="btn btn-primary btn-sml">Add new post</button>
    </form>

    <form action="/users/{{ user.id }}/edit" method="GET">
        <button class="btn btn-primary btn-sml">Edit</button>
    </form>

    <form action="/users/{{ user.id }}/delete" method="POST">
        <button class="btn btn-danger btn-sml">Delete</button>
    </form>

{% endblock content %}
