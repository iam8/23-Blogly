{# Form for creating a new tag for Blogly. #}

{% extends "base.jinja2" %}


{% block title %}
    Create Tag
{% endblock title %}

{% block content %}

    <h1>Create A New Tag</h1>

    <form>
        <div>
            <label for="tagname">Name</label>
            <input id="tagname" type="text" name="tagname" placeholder="Enter a name for the tag">
        </div>

        {% for msg in get_flashed_messages() %}
            <li>{{ msg }}</li>
        {% endfor %}

        <button class="btn btn-success btn-sml"
                formaction="/tags/new"
                formmethod="POST">
            Add
        </button>

        <button class="btn btn-secondary btn-sml"
                formaction="/tags"
                formmethod="GET">
            Cancel
        </button>
    </form>



{% endblock content %}
